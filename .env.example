# File: .env.example

# === REQUIRED ===

# Node Environment
NODE_ENV=production

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_PREMIUM_QUARTERLY_PRICE_ID=price_xxxxxxxxxxxxx

# AI (OpenAI)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# System
SYSTEM_API_KEY=<generate-with-openssl-rand-hex-32>

# Public Variables
NEXT_PUBLIC_URL=https://getjobping.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx

# === OPTIONAL ===

# Job Scraping APIs
ADZUNA_APP_ID=xxxxxxxxxxxxx
ADZUNA_APP_KEY=xxxxxxxxxxxxx
REED_API_KEY=xxxxxxxxxxxxx

# Monitoring
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting (all optional - defaults are set for production)
# Configure these to scale with your infrastructure capacity
# See docs/RATE_LIMIT_CONFIGURATION.md for details

# Default endpoint rate limits
RATE_LIMIT_DEFAULT_MAX=500
RATE_LIMIT_DEFAULT_WINDOW_MS=60000

# Match users endpoint
RATE_LIMIT_MATCH_USERS_MAX=30
RATE_LIMIT_WINDOW_MS=240000

# Scrape endpoint
RATE_LIMIT_SCRAPE_MAX=50
RATE_LIMIT_SCRAPE_WINDOW_MS=60000

# Email sending
RATE_LIMIT_EMAILS_MAX=20
RATE_LIMIT_EMAILS_WINDOW_MS=60000

# Checkout session
RATE_LIMIT_CHECKOUT_MAX=30
RATE_LIMIT_CHECKOUT_WINDOW_MS=300000

# User matches endpoint
RATE_LIMIT_USER_MATCHES_MAX=100
RATE_LIMIT_USER_MATCHES_WINDOW_MS=60000

# Dashboard endpoint
RATE_LIMIT_DASHBOARD_MAX=200
RATE_LIMIT_DASHBOARD_WINDOW_MS=60000

# Email verification
RATE_LIMIT_VERIFY_EMAIL_MAX=50
RATE_LIMIT_VERIFY_EMAIL_WINDOW_MS=300000

# Cleanup jobs
RATE_LIMIT_CLEANUP_MAX=20
RATE_LIMIT_CLEANUP_WINDOW_MS=300000

# Internal consume method
RATE_LIMIT_CONSUME_MAX=500
RATE_LIMIT_CONSUME_WINDOW_SEC=60
