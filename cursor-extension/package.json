{
	"name": "jobping-mcp-tools",
	"displayName": "JobPing MCP Tools",
	"description": "MCP tools for JobPing project management and debugging",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.74.0",
		"cursor": "^1.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jobping.getSentryErrors",
				"title": "JobPing: Get Recent Sentry Errors"
			},
			{
				"command": "jobping.analyzeSentryPatterns",
				"title": "JobPing: Analyze Sentry Error Patterns"
			},
			{
				"command": "jobping.getSentryErrorDetails",
				"title": "JobPing: Get Sentry Error Details"
			},
			{
				"command": "jobping.testMCPConnection",
				"title": "JobPing: Test MCP Connection"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "jobping.getSentryErrors",
					"when": "workspaceFolderCount > 0"
				},
				{
					"command": "jobping.analyzeSentryPatterns",
					"when": "workspaceFolderCount > 0"
				},
				{
					"command": "jobping.getSentryErrorDetails",
					"when": "workspaceFolderCount > 0"
				},
				{
					"command": "jobping.testMCPConnection",
					"when": "workspaceFolderCount > 0"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"dotenv": "^16.3.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "^18.15.0",
		"typescript": "^5.0.4"
	}
}
