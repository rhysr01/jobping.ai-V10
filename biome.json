{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": {
		"enabled": false
	},
	"linter": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.next/**",
			"!**/build/**",
			"!**/coverage/**",
			"!**/Utils/countryLanguageMap.ts",
			"!**/Utils/email/subjectBuilder.ts",
			"!**/Utils/email/types.ts",
			"!**/scripts/test-production-matching-engine.ts"
		]
	}
}
